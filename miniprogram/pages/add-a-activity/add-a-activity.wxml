<editor placeholder="在此输入活动介绍" auto-height="true" style="background:#ffffff;min-height:250rpx;width:100%;"></editor>
<view style="display:flex; flex-direction:row; margin:25rpx 20rpx;">
  <mp-icon icon="time" size="{{35}}" style="margin-right:10rpx;"></mp-icon>
  <view>
    <text>活动时间</text>
    <view style="display:flex; flex-direction:row;">
      <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01">
        <view style="background: #fff; padding: 5rpx 10rpx;">
          {{startDate}}
        </view>
      </picker>
      <text>{{"　"}}</text>
      <picker mode="time" value="{{time}}" start="09:01" end="21:01">
        <view style="background: #fff; padding: 5rpx 10rpx;">
          {{startTime}}
        </view>
      </picker>
    </view>
  </view>
</view>
<view style="display:flex; flex-direction:row; margin:25rpx 20rpx;">
  <mp-icon icon="location" size="{{35}}" style="margin-right:10rpx;"></mp-icon>
  <view>
    <text>活动地点</text>
    <view style="display:flex; flex-direction:row; background: #fff; padding: 5rpx 10rpx;">
      <navigator url="/pages/choose-a-location/choose-a-location" style="margin-right:20rpx;">
        选择位置
      </navigator>
    </view>
  </view>
</view>
<button type="primary">创建新活动</button>