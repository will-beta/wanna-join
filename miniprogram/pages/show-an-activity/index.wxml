<block wx:if="{{!userInfo}}">
  <login bind:getUserInfo="onGetUserInfo"></login>
</block>
<block wx:elif="{{!ready}}">
  <mp-loading duration="{{900}}" type="dot-gray" animated="true" style="margin:400rpx 0;"></mp-loading>
</block>
<block wx:else>
  <scroll-view scroll-y="true" style="height:92%;margin-bottom:8%">
    <show-an-activity activity="{{activity}}" display="{{display}}"></show-an-activity>
  </scroll-view>
  <view style="position:fixed;bottom:0;width:100%;height:12%;">
    <enroll-an-activity activity="{{activity}}" enrollment="{{enrollment}}" pageToModifyAnActivity="{{'/pages/modify-an-activity/index?activityId='+activityId}}" pageToShowEnrollments="{{'/pages/show-enrollments/index?activityId=' + activityId}}" bind:updateEnrollment="updateEnrollment"></enroll-an-activity>
  </view>
</block>