<block wx:if="{{enrollments.length>0}}">
  <mp-cells>
    <block wx:for="{{enrollments}}" wx:key="index" wx:for-item="enrollment">
      <navigator url="{{'/pages/show-an-activity/index?activityId='+enrollment.activityId}}">
        <mp-slideview buttons="{{slideButtons}}" bindbuttontap="onSlideButtonTap" data-key="{{enrollment._id}}">
          <mp-cell>
            <view style="display:flex;flex-direction:row;">
              <view>
                <image src="{{enrollment.activity.userInfo.avatarUrl}}" style="width:150rpx;height:150rpx;"></image>
              </view>
              <view style="padding:0rpx 20rpx;width:80%;">
                <view class="row">
                  <text wx:if="{{enrollment.activity.title}}" style="font-size:large;">{{enrollment.activity.title}}</text>
                </view>
                <view>
                  <text>{{displays[index].startDateTime}}</text>
                </view>
                <view class="row">
                  <text>{{displays[index].weekday}}</text>
                  <text>{{displays[index].timespan}}</text>
                </view>
              </view>
            </view>
            <view slot="footer" style="writing-mode:vertical-lr;padding:0rpx 20rpx;">{{enrollment.status}}</view>
          </mp-cell>
        </mp-slideview>
      </navigator>
    </block>
  </mp-cells>
</block>
<block wx:else>
  <view>
    <view>你还未报名任何活动。</view>
    <view>要不自己创建一个？</view>
  </view>
</block>