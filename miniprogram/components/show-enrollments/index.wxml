<view>
  <mp-cells>
    <mp-cell wx:for="{{enrollments}}" wx:key="index" wx:for-item="enrollment">
      <view style="display:flex;flex-direction:row;">
        <text style="display:flex;align-items:center;padding-right:8px;">{{index+1}}</text>
        <image mode="scaleToFill" src="{{enrollment.userInfo.avatarUrl}}" style="min-width:64px;min-height:64px;max-width:64px;max-height:64px;"></image>
        <view style="display:flex;flex-direction:column;justify-content:space-around;padding:0 8px;">
          <view>{{enrollment.nickName}}</view>
          <view style="color:grey;">{{enrollment.prologue}}</view>
        </view>
      </view>
      <view slot="footer" style="padding:0 8px;">
        <view>{{enrollment.status}}</view>
        <view>{{lastDateTimes[index]}}</view>
      </view>
    </mp-cell>
  </mp-cells>
</view>