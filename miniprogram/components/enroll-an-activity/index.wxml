<view wx:if="{{enrollment.status!=null && enrollment.status!='已阅'}}" style="height:30%;color:grey;display:flex;align-items:center;justify-content:center;font-size:small;background-color:#efefef;">您{{enrollment.status}}</view>
<view style="display:flex;flex-direction:row;height:70%;justify-content:space-between;background-color:#efefef;#color:#555;">
  <button wx:if="{{activity._createdBy == enrollment._createdBy}}" type="default" bindtap="onTapToNavigate" style="font-size:small;" data-url="{{pageToModifyAnActivity}}">
    <text>编辑活动</text>
  </button>
  <button type="primary" open-type="share" style="font-size:small;">
    <text>分享活动</text>
  </button>
  <button bindtap="onTapToNavigate" type="default" style="font-size:small;" data-url="{{pageToShowEnrollments}}">
    <text>报名人员</text>
  </button>
  <button wx:if="{{enrollment.status=='已报名'&&!isExpire}}" type="default" style="font-size:small;" bindtap="onTapToCancelEnroll">
    <text>取消报名</text>
  </button>
  <button wx:if="{{enrollment.status!='已报名'&&!isExpire&&!isFull}}" type="primary" style="font-size:small;" bindtap="onTapToOpenDialog">
    <text>我想报名</text>
  </button>
</view>
<mp-dialog ext-class="dialog" show="{{dialogShow}}" title="报名表" buttons="{{buttons}}" bindbuttontap="onTapDialogButton">
  <view style="margin-bottom:30rpx;">
    <text>昵称</text>
    <input name="nickName" type="text" value="{{enrollment.nickName}}" class="editable" bindblur="onChangeNickName" />
  </view>
  <view>
    <text>问候语</text>
    <input name="prologue" type="text" value="{{enrollment.prologue}}" class="editable" bindblur="onChangePrologue" />
  </view>
</mp-dialog>